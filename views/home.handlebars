<div class="row">
  <div class="col-lg-12">
    {{#if success_msg}}
      <div class="alert alert-success">
        {{success_msg}}
      </div>
    {{/if}}

    {{#if error_msg}}
      <div class="alert alert-danger">
        {{error_msg}}
      </div>
    {{/if}}

    {{#if error}}
      <div class="alert alert-danger">
        {{error}}
      </div>
    {{/if}}
  </div>
</div>

